#header
  // height: banner-height
  position: fixed
  top: 0
  border-bottom: 1px solid lighten(color-border, 70%)
  background: #fff;
  width: 100%
  z-index: 200
  transition: all 1s linear
  .outer 
    transition: all 0.5s ease-in-out
  
.disperse 
  opacity: 0.6
  @media mq-mobile
    opacity: 1
  &:hover
    opacity: 1
  .outer
    max-width: 100%
#header .mask {
  position: absolute;
  left:0;
  top:0; 
  width:100%;
  height:100%; 
  background: color-header-mask;
}
#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url(banner-url) center #000
  background-attachment: fixed
  background-size: cover
  z-index: -1

#header-title
  text-align: center
  height: logo-size
  position: absolute
  top: 50%
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: color-link
  font-weight: 300
  
#logo-wrap 
  display: inline-block
  float: left
  margin-bottom: 0
  padding: 12px 30px 12px 0
  #logo-img 
    height: 40px
    width: 40px
    border-radius: 50%
    vertical-align: bottom
  .site-name 
    font-size: 20px
    vertical-align: top
#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: right

$nav-link
  float: left
  color: color-link
  opacity: 0.7
  text-decoration: none
  // text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 12px 15px
  line-height: 40px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  // width: font-size
  height: font-size
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  font-size: 14px
  color: color-nav-link
  @media mq-md
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-md
    display: block

#sub-nav
  float: right
  // margin-right: -15px

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  width: 150px
  height: 30px
  right: 0
  top: -40px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    top: 15px
    
  // @media mq-mobile
  //   width: 100%
  //   right: -100%
#nav-search-wrap {
  clearfix()
  position: relative
}
.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  border: 1px solid color-link
  // box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777