// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

color-main = #57A3E8
// Colors
color-default = #555
color-grey = #a4a8b3
color-border = color-main
color-text = #606060
color-link = color-main
color-nav-link = #576366
color-background = #f5f8fa
color-sidebar-text = #777
color-widget-background = #ddd
color-widget-border = #ccc
color-footer-background = #262a30
color-mobile-nav-background = rgba(0,0,0,0.8)

//Social color
color-twitter = #00aced
color-facebook = #3b5998
color-google = #dd4b39
color-github = #4078c0
color-weibo = #e6162d
color-stackoverflow = #ff9900
color-rss = #fe6502
color-linkedin = #0d78b7
color-codepen = #000
color-pinterest = #d83037

color-header-mask = rgba(0,0,0,0.5)
color-tag-hover = color-link

// Fonts
font-sans = "Helvetica Neue", "Lantinghei SC","Open Sans","Microsoft YaHei","å¾®è½¯é›…é»‘",STHeiti,"WenQuanYi Micro Hei",SimSun,sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = mono, Consolas, Monaco, 'Andale Mono', Consolas, 'Courier New', monospace;
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 18px
line-height = 1.6em
line-height-title = 1.1em

// Header
logo-size = 40px
subtitle-size = 16px
banner-height = 300px
banner-url = hexo-config("banner-url")
sidebar = hexo-config("sidebar")
header-height = 64px

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 100%
main-column = 9
sidebar-column = 3


if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"

mq-md = "screen and (max-width: 767px)"


// img
site-logo = hexo-config('avatar_url')
author-avatar = hexo-config('author_meta.author_avatar')

if !author-avatar && site-logo
	author-avatar = site-logo
