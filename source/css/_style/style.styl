*,
*:before,
*:after {
    box-sizing: border-box;
}
body {
    font-weight: 200;
}
ul, ol {
    list-style: initial;
    margin-left: 40px;
}
li {
    
}

h1,h2,h3,h4,h5,h6,p {
    margin-bottom: 16px;
}

h1, h2, h3,
h4, h5, h6 {
    text-rendering: optimizeLegibility;
    line-height: 1;
    margin-top: 0;
    font-family: font-sans;
}

h1 {
    font-size: 2.4rem;
    line-height: 1.2em;
    letter-spacing: -2px;
    text-indent: -3px;
}

h2 {
    font-size: 2rem;
    line-height: 1.2em;
    letter-spacing: -1px;
    text-indent: -2px;
}

h3 {
    font-size: 1.8rem;
}

h4 {
    font-size: 1.6rem;
}

h5 {
    font-size: 1rem;
}

h6 {
    font-size: 1rem;
}


/* ==========================================================================
   Media Queries - Smaller than 900px
   ========================================================================== */

@media only screen and (max-width: 900px) {

    blockquote {
        margin-left: 0;
    }

    h1 {
        font-size: 2.2rem;
        text-indent: -2px;
    }

    h2 {
        font-size: 1.8rem;
    }

    h3 {
        font-size: 1.6rem;
    }

    h4 {
        font-size: 1.4rem;
    }

}

/* ==========================================================================
   Media Queries - Smaller than 500px
   ========================================================================== */


@media only screen and (max-width: 500px) {
    h1, h2 {
        font-size: 2rem;
        line-height: 1.1em;
        letter-spacing: -1px;
    }

    h3 {
        font-size: 1.6rem;
    }

    h4 {
        font-size: 1rem;
    }
}